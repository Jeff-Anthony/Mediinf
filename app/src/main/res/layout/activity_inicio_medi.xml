<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InicioMedi">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/fondo_medico2"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/titulo_busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:text="Busqueda de Medicamentos"/>


    <SearchView
        android:id="@+id/busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_busqueda"
        />

    <LinearLayout
        android:layout_below="@+id/busqueda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">



        <Button
            android:id="@+id/fragment_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:alpha="0.7"
            android:textColor="#FFFF"
            android:background="@drawable/indicador_selecto"
            android:text="Generales"

            />

        <Button
            android:id="@+id/fragment_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:alpha="0.7"
            android:textColor="#FFFF"
            android:background="@drawable/indicador_selecto"
            android:text="Laboratorio"
            />
        <Button
            android:id="@+id/fragment_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:alpha="0.7"
            android:textColor="#FFFF"
            android:background="@drawable/indicador_selecto"
            android:text="Naturales"

            />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8000000"
        android:alpha="0.7">



    </RelativeLayout>

    </LinearLayout>


</RelativeLayout>