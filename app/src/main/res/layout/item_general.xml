<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_medi"
            android:layout_width="167dp"
            android:layout_height="154dp"
            app:srcCompat="@drawable/ic_profile"

            />

        <TextView
            android:id="@+id/nombre_medi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_toEndOf="@+id/image_medi"
            android:text="Nombre" />

        <TextView
            android:id="@+id/informacion_medi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/image_medi"
            android:layout_below="@+id/nombre_medi"
            android:text="InformaciÃ³n sobre el Medicamento"
            />

        <TextView
            android:id="@+id/texto_precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/image_medi"
            android:layout_below="@+id/informacion_medi"
            android:text="Precio por pastilla:"
            />



        <TextView
            android:id="@+id/precio_medi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/texto_precio"
            android:layout_below="@+id/informacion_medi"
            android:text="Precio"
            />

    </RelativeLayout>
</android.support.v7.widget.CardView>