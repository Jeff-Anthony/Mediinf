<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    tools:context=".activity.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/medicamentos"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="35dp"
        android:background="#d8000000"
        android:alpha="0.7"
        android:gravity="center"
        android:layout_centerInParent="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="114dp"
            android:layout_height="114dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/mediinf"
            app:civ_border_color="#3b83bd"
            app:civ_border_width="8dp" />

    <LinearLayout
        android:id="@+id/Register_Panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:visibility="visible"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro de Usuario"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#FFFF"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nombre_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Ingrese su Nombre"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_box"
            android:textColorHint="#FFFF"
            />

        <EditText
            android:id="@+id/apellido_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Ingrese su Apellido"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_box"
            android:textColorHint="#FFFF"
            />

        <EditText
            android:id="@+id/dni_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="DNI"
            android:maxLength="8"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_box"
            android:textColorHint="#FFFF"
            />

        <EditText
            android:id="@+id/correo_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Correo Electronico*"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_box"
            android:textColorHint="#FFFF"
            />

        <EditText
            android:id="@+id/alergia_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColorHint="#FFFF"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:inputType="text"
            android:background="@drawable/text_box"
            android:hint="Ingrese una Alergia"
            />

        <EditText
            android:id="@+id/contraseña_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Ingrese su Contraseña*"
            android:inputType="textPassword"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/text_box"
            android:textColorHint="#FFFF"
            />


        <Button
            android:id="@+id/button_usuario_registro"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_ripple"
            android:textColor="@drawable/button_select"
            android:radius="50dp"
            android:text="Registrarse" />

        <Button
            android:id="@+id/button_regreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             android:layout_gravity="center"
            android:textColor="#ffff"
            android:text="Regresar"
            style="@style/Widget.AppCompat.ActionBar.TabText"
            />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>