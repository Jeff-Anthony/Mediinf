<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    app:cardCornerRadius="25dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/enf_style"
        android:padding="8dp">
        <ImageView
            android:id="@+id/foto_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/nombre_enfermedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Nombre de enfermedad"/>

        <TextView
            android:id="@+id/tipo_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/nombre_enfermedad"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            tools:text="Tipo de enfermedad : Alergia"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>